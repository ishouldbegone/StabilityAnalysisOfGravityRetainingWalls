<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/stacked_stone_med"
    tools:context="com.manparvesh.arindamsir.fifthsem.firstappwithhim.stabilityanalysisofgravityretainingwalls.Input" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/textViewHeader3"
            android:layout_width="fill_parent"
            android:textColor="#FBF8EF"
            android:textSize="45sp"
            android:layout_height="wrap_content"
            android:text="Enter Foundation Soil parameters"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent" >
    						<!-- ................................................................................. -->
        <TextView
            android:id="@+id/textInputView3_1"
            android:textSize="25dp"
            android:layout_width="400dp"
            android:textColor="#FBF8EF"
            android:layout_height="50dp"
            android:text="Depth of soil cover at toe (m)"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText3_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="25dp"
            android:background="#FBF8EF"  
            android:textColor="#3A2F0B"
            android:alpha="0.75"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
        						<!-- ................................................................................. -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textInputView3_2"
            android:layout_width="400dp"
            android:textColor="#FBF8EF"
            android:textSize="25dp"
            android:layout_height="50dp"
            android:text="Cohesion (kPa)"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText3_2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FBF8EF"  
            android:textColor="#3A2F0B"
            android:textSize="25dp"
            android:alpha="0.75"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
        						<!-- ................................................................................. -->
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textInputView3_3"
            android:layout_width="400dp"
            android:textColor="#FBF8EF"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:text="Angle of friction (degrees)"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText3_3"
            android:layout_width="wrap_content"
            android:background="#FBF8EF"  
            android:textColor="#3A2F0B"
            android:alpha="0.75"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="25dp"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
        						<!-- ................................................................................. -->
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textInputView3_4"
            android:layout_width="400dp"
            android:textColor="#FBF8EF"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:text="Dry density (kN/m3)"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText3_4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FBF8EF"  
            android:textColor="#3A2F0B"
            android:alpha="0.75"
            android:textSize="25dp"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
        						<!-- ................................................................................. -->
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textInputView3_5"
            android:textColor="#FBF8EF"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:text="Saturated density (kN/m3)"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editText3_5"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="25dp"
            android:ems="10"
            android:background="#FBF8EF"  
            android:textColor="#3A2F0B"
            android:alpha="0.75"
            android:inputType="number" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>
    
    					<!-- ..................................BUTTONS............................................... -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:gravity="center" >
        
        <Button
            android:id="@+id/button3_1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:textColor="#FBF8EF"
            android:background="@drawable/button_wood"
            android:text="Next" />
        
    </LinearLayout>                
        
    </LinearLayout>
    
</ScrollView>
